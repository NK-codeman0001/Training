<h1> <%= @article.title %> </h1>
<p> <%= @article.body %> </p>
<ul>
  <li><%= link_to "Edit", edit_article_path(@article)%></li>
  <li><%= link_to "Delete", article_path(@article), data: {
    turbo_method: :delete,
    turbo_confirm: "Are you want to delete this?"
  } %></li>

</ul>
<h3>Comments</h3>
<%= render @article.comments%>

<h3>Add a comment:</h3>
<%= render 'comments/form'%>