<% unless comment.archived? %>
  <p>
    <b>Commenter: </b>
    <%= comment.commenter %>
  </p>

  <p>
    <b>Comment: </b>
    <%= comment.body%>
  </p>

  <p>
    <%= link_to "Delete Comment" , [comment.article, comment], data:{
      turbo_method: :delete,
      turbo_confirm: "Are you sure?"
    }%>
  </p>
<%end%>